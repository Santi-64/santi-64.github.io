import subprocess
import sys

def install(package):
    subprocess.check_call([sys.executable, "-m", "pip", "install", package])

install('Flask')

import subprocess

def install_gem(gem):
    subprocess.check_call(["gem", "install", gem])

install_gem('bundler')
install_gem('jekyll')

from flask import Flask, redirect, url_for

app = Flask(__name__)

@app.route("/")
def home():
    return "Hello! This is the main page <h1>HELLO<h1>"

@app.route("/name")
def user(name):
    return f"Hello {name}!"

@app.route("/admin")
def admin():
    return redirect(url_for("home"))

if __name__ == "__main__":
    app.run()